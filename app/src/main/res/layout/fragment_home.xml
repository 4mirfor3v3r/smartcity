<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.main.home.HomeFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_primary_bottom_rounded_32"
            android:paddingHorizontal="16dp"
            android:paddingVertical="16dp"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tvName"
                style="@style/Poppins.600.White.16sp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Halo, Selamat Datang\ndi Aplikasi SINAR"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_marginTop="16dp"
                android:padding="16dp"
                android:background="@drawable/bg_primary_dark_rounded_32"
                app:layout_constraintTop_toBottomOf="@id/tvName"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_height="wrap_content">
                <TextView
                    style="@style/Poppins.500.White.14sp"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:text="Jumlah indikasi Kejahaatan hari ini" />
                <TextView
                    android:id="@+id/tvCrimeCount"
                    style="@style/Poppins.500.White.24sp"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_marginTop="8dp"
                    android:layout_height="wrap_content"
                    tools:text="10" />
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:padding="24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/toolbar">

            <RelativeLayout
                android:id="@+id/btnCCTV"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="match_parent"
                android:background="@drawable/bg_primary_rounded_24"
                android:layout_height="130dp">
                <TextView
                    style="@style/Poppins.500.White.20sp"
                    android:layout_width="wrap_content"
                    android:layout_marginStart="32dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_height="wrap_content"
                    android:text="Lihat CCTV" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:scaleX="-1"
                    android:layout_marginEnd="2dp"
                    android:layout_gravity="end"
                    android:src="@drawable/ic_cctv" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/btnSelfReport"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btnCCTV"
                android:layout_width="match_parent"
                android:layout_marginTop="16dp"
                android:background="@drawable/bg_primary_rounded_24"
                android:layout_height="130dp">
                <TextView
                    style="@style/Poppins.500.White.20sp"
                    android:layout_width="wrap_content"
                    android:layout_marginStart="32dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_height="wrap_content"
                    android:text="LAPOR MANDIRI" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="end"
                    android:layout_marginEnd="20dp"
                    android:src="@drawable/ic_self_report" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/btnSafeRoute"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btnSelfReport"
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:background="@drawable/bg_primary_rounded_24"
                android:layout_height="130dp">
                <TextView
                    style="@style/Poppins.500.White.20sp"
                    android:layout_width="wrap_content"
                    android:layout_marginStart="32dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_height="wrap_content"
                    android:text="Rute Aman" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="end"
                    android:layout_marginEnd="20dp"
                    android:src="@drawable/ic_location" />
            </RelativeLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>