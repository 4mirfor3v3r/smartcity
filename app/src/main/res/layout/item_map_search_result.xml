<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="12dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivCCTV"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_pin_cctv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="0dp"
            tools:text="SP Banda"
            style="@style/Poppins.500.Black.14sp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@id/ivCCTV"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/ivCCTV"
            app:layout_constraintTop_toTopOf="@id/ivCCTV" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>